<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.ruairi.colorsearch.colorTwo"
    android:background="#ff79f200">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Find the buttons on each screen to progress"
        android:id="@+id/colorTwoText"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="#ff000000"
        android:textSize="25dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/colorTwoButton"
        android:background="#ff86f201"
        android:textColor="#ff86f201"
        android:text="Here the button at"
        android:layout_below="@+id/colorTwoText"
        android:layout_alignRight="@+id/colorTwoText"
        android:layout_alignEnd="@+id/colorTwoText"
        android:layout_marginTop="100dp" />

</RelativeLayout>
